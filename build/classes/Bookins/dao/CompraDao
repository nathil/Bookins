package Bookins.dao;

import java.sql.SQLDataException;
import java.sql.SQLException;

import Bookins.model.*; 
import Bookins.util.*;
public class CompraDao {
	public boolean InserirCompra(Livro c, LoginCadastro n) {
		Conexao con = null; 
		
		try {
			con = new Conexao();
			con.executeUpdate("INSERT INTO compra(usuario, titulo, preco) VALUES ("
					+ "'" + n.getUsuario() + "','"
					+ c.getTitulo() + "','"
					+ c.getPreco() +"');");
			return true;
		}catch(SQLException e){
			return false;
		}
	}
}
